---
name: lint-on-push
run-name: Running linting on ${{ github.ref_name }} ${{ github.ref_type }}
on:
  push:
    branches:
      - "**"
    tags-ignore:
      - "**"

jobs:
  lint:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions-rust-lang/setup-rust-toolchain@v1
      - name: fmt and lint
        run: |
          cargo fmt -- --check && cargo clippy -- -Dwarnings
